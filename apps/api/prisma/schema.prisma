// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
}

generator client {
  provider     = "prisma-client-js"
  output       = "../generated/prisma"
}

enum WorkspaceRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum AuthProvider {
  LOCAL
  OIDC
}

enum DraftStatus {
  DRAFT
  REVIEW
  READY
  PUBLISHED
}

enum IdeaStatus {
  NEW
  IN_REVIEW
  APPROVED
  DRAFTED
}

enum IdeaSourceType {
  RSS
  YOUTUBE
  MANUAL
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  CANCELLED
  EXPIRED
}

enum MediaType {
  IMAGE
  VIDEO
}

model User {
  id         String       @id @default(uuid())
  email      String       @unique
  password   String? // Nullable for OIDC users
  name       String?
  avatar     String?
  provider   AuthProvider @default(LOCAL)
  providerId String? // OIDC subject identifier

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  workspaceMembers     WorkspaceMember[]     @relation("UserWorkspaceMembers")
  ownedWorkspaces      Workspace[]           @relation("WorkspaceOwner")
  drafts               Draft[]               @relation("DraftCreator")
  draftVersions        DraftVersion[]        @relation("DraftVersionCreator")
  ideas                Idea[]                @relation("IdeaCreator")
  sentInvitations      WorkspaceInvitation[] @relation("InvitationSender")
  passwordResetTokens  PasswordResetToken[]
  uploadedMedia        Media[]               @relation("MediaUploader")

  @@index([email])
  @@index([providerId])
  @@map("users")
}

model Workspace {
  id          String  @id @default(uuid())
  name        String
  slug        String  @unique
  description String?

  ownerId String
  owner   User   @relation("WorkspaceOwner", fields: [ownerId], references: [id], onDelete: Cascade)

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  members     WorkspaceMember[]     @relation("WorkspaceMembers")
  drafts      Draft[]
  ideas       Idea[]
  invitations WorkspaceInvitation[]
  media       Media[]

  @@index([slug])
  @@index([ownerId])
  @@map("workspaces")
}

model WorkspaceMember {
  id   String        @id @default(uuid())
  role WorkspaceRole @default(MEMBER)

  userId String
  user   User   @relation("UserWorkspaceMembers", fields: [userId], references: [id], onDelete: Cascade)

  workspaceId String
  workspace   Workspace @relation("WorkspaceMembers", fields: [workspaceId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, workspaceId])
  @@index([userId])
  @@index([workspaceId])
  @@map("workspace_members")
}

model Draft {
  id             String      @id @default(uuid())
  title          String
  currentVersion Int         @default(1) @map("current_version")
  status         DraftStatus @default(DRAFT)

  // Temporary content (auto-saved, not committed as version)
  tempContent        Json?     @map("temp_content")
  tempContentSavedAt DateTime? @map("temp_content_saved_at")

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdById String
  createdBy   User   @relation("DraftCreator", fields: [createdById], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  versions DraftVersion[]

  @@index([workspaceId])
  @@index([createdById])
  @@index([status])
  @@map("drafts")
}

model Idea {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      IdeaStatus @default(NEW)

  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  createdById String
  createdBy   User @relation("IdeaCreator", fields: [createdById], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  sources IdeaSource[]

  @@index([workspaceId])
  @@index([createdById])
  @@index([status])
  @@map("ideas")
}

model IdeaSource {
  id          String         @id @default(uuid())
  ideaId      String         @map("idea_id")
  idea        Idea           @relation(fields: [ideaId], references: [id], onDelete: Cascade)
  url         String?
  content     String
  sourceType  IdeaSourceType @default(MANUAL) @map("source_type")
  metadata    Json?
  embedding   Unsupported("vector")?

  createdAt DateTime @default(now()) @map("created_at")

  @@index([ideaId])
  @@index([sourceType])
  @@map("idea_sources")
}

model DraftVersion {
  id              String  @id @default(uuid())
  version         Int
  content         Json // Tiptap JSON format
  contentHtml     String? @map("content_html") @db.Text
  contentMarkdown String? @map("content_markdown") @db.Text
  changeSummary   String? @map("change_summary") @db.Text

  draftId String
  draft   Draft  @relation(fields: [draftId], references: [id], onDelete: Cascade)

  createdById String
  createdBy   User   @relation("DraftVersionCreator", fields: [createdById], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@unique([draftId, version])
  @@index([draftId])
  @@index([createdById])
  @@map("draft_versions")
}

model WorkspaceInvitation {
  id    String           @id @default(uuid())
  email String
  role  WorkspaceRole    @default(MEMBER)
  code  String           @unique @default(uuid())
  status InvitationStatus @default(PENDING)
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedById String
  invitedBy   User   @relation("InvitationSender", fields: [invitedById], references: [id], onDelete: Cascade)

  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([code])
  @@index([workspaceId])
  @@index([status])
  @@map("workspace_invitations")
}

model PasswordResetToken {
  id     String  @id @default(uuid())
  token  String  @unique @default(uuid())
  isUsed Boolean @default(false)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([userId])
  @@map("password_reset_tokens")
}

model Media {
  id           String    @id @default(uuid())

  workspaceId  String    @map("workspace_id")
  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  uploadedById String    @map("uploaded_by_id")
  uploadedBy   User      @relation("MediaUploader", fields: [uploadedById], references: [id], onDelete: Restrict)

  // File information
  filename     String    // Generated filename (UUID-based)
  originalName String    @map("original_name") // Original uploaded filename
  mimeType     String    @map("mime_type")
  size         Int       // File size in bytes
  type         MediaType

  // Metadata
  description  String?   @db.Text
  tags         String[]  @default([])

  // Storage configuration
  storageType  String    @default("local") @map("storage_type") // "local" or "s3"
  storagePath  String    @map("storage_path") // Relative path or S3 key

  // Image variants and video thumbnail (Strapi-like structure)
  // For images: { thumbnail: {...}, small: {...}, medium: {...}, large: {...} }
  // For videos: { thumbnail: {...} }
  variants     Json?

  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  @@index([workspaceId])
  @@index([uploadedById])
  @@index([type])
  @@index([createdAt])
  @@map("media")
}
