{
  "name": "Fastwreck Development",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20",
      "nodeGypDependencies": true,
      "nvmVersion": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerComposeVersion": "v2"
    },
    "ghcr.io/devcontainers-extra/features/pnpm:2": {
      "version": "9.0.0"
    },
    "ghcr.io/devcontainers-extra/features/claude-code:1": {
      "version": "latest"
    },
    "ghcr.io/danzilberdan/devcontainers/opencode:0": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "Prisma.prisma",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-typescript-next",
        "editorconfig.editorconfig",
        "Anthropic.claude-code",
        "ms-azuretools.vscode-containers",
        "openai.chatgpt",
        "cweijan.vscode-database-client2",
        "cweijan.dbclient-jdbc"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "eslint.workingDirectories": [
          {
            "mode": "auto"
          }
        ],
        "[prisma]": {
          "editor.defaultFormatter": "Prisma.prisma"
        }
      }
    }
  },

  "postStartCommand": "bash .devcontainer/start-infra.sh",

  "forwardPorts": [3000, 4000, 5432, 6379],

  "portsAttributes": {
    "3000": {
      "label": "Frontend (Console)",
      "onAutoForward": "notify"
    },
    "4000": {
      "label": "Backend (API)",
      "onAutoForward": "notify"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "silent"
    },
    "6379": {
      "label": "Redis",
      "onAutoForward": "silent"
    }
  },

  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "remoteEnv": {
    "NODE_ENV": "development"
  }
}
